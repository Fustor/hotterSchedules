<Window x:Class="hotterSchedules.AddJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotterSchedules"
        mc:Ignorable="d"
        Title="AddJobWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="EmployeeLabel" Content="Label" HorizontalAlignment="Left" Margin="39,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="JobTextBox" HorizontalAlignment="Left" Height="23" Margin="39,63,0,0" TextWrapping="Wrap" Text="Job" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="39,136,0,0" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="172,136,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
